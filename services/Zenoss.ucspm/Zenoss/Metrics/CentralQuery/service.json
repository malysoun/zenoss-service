{
    "Description": "Zenoss Central Query Service and JavaScript Library",
    "Actions": {
      "debug": "bash -c 'curl -X POST http://localhost:58888/tasks/debugtoggle'"
    },
    "Command": "su - zenoss -c \"cd /opt/zenoss && /bin/supervisord -n -c etc/central-query/supervisord.conf\"",
    "ConfigFiles": {
       "/opt/zenoss/etc/central-query/central-query_supervisor.conf": {
            "FileName": "/opt/zenoss/etc/central-query/central-query_supervisor.conf",
            "Owner": "zenoss:zenoss",
            "Permissions": "0644"
       },
	"/opt/zenoss/etc/central-query/configuration.yaml": {
            "FileName": "/opt/zenoss/etc/central-query/configuration.yaml",
            "Owner": "zenoss:zenoss",
            "Permissions": "0644"
	}
    },
    "Endpoints": [
        {
            "Name": "central_query",
            "Application": "central_query",
            "PortNumber": 8888,
            "Protocol": "tcp",
            "Purpose": "export"
        },
        {
            "Name": "zproxy",
            "Application": "zproxy",
            "PortNumber": 8080,
            "Protocol": "tcp",
            "Purpose": "import"
        },
        {
            "Name": "opentsdb-reader",
            "Application": "opentsdb-reader",
            "PortNumber": 4242,
            "Protocol": "tcp",
            "Purpose": "import"
        }
    ],
    "ImageID": "zenoss/zenoss5x",
    "Instances": {
        "min": 1
    },
    "RAMCommitment": "1G",
    "CPUCommitment": 1,
    "Launch": "auto",
    "LogConfigs": [
        {
            "filters": [
                "zappdaemon"
            ],
            "path": "/opt/zenoss/log/central-query.log",
            "type": "centralquery"
        }
    ],
    "Name": "central_query",
    "Tags": [
        "daemon"
    ],
    "HealthChecks": {
        "answering": {
            "Script": "curl --fail --max-time 4  http://localhost:58888/healthcheck",
            "Interval": 5.0
        }
    },
    "MonitoringProfile": {
        "MetricConfigs": [
            {
                "ID": "jvm.fd_usage",
                "Name": "JVM File Descriptor Usage",
                "Description": "JVM File Descriptor Usage Statistics",
                "Metrics": [
                    { "ID": "jvm.fd_usage", "Name": "FD Usage Count" }
                ]
            },
            {
                "ID": "jvm.thread",
                "Name": "JVM Thread",
                "Description": "JVM Thread Type Statistics",
                "Metrics": [
                    { "ID": "jvm.thread_count", "Name": "JVM Thread Count" },
                    { "ID": "jvm.daemon_thread_count", "Name": "JVM Daemon Thread Count" }
                ]
            },
            {
                "ID": "jvm.memory",
                "Name": "JVM Memory",
                "Description": "JVM heap vs. non-heap memory usage",
                "Metrics": [
                    { "ID": "jvm.memory.heap_usage", "Name": "JVM Heap Memory Usage" },
                    { "ID": "jvm.memory.non_heap_usage", "Name": "JVM Non-Heap Memory Usage" }
                ]
            },
            {
                "ID": "jvm.memory.memory_pool_usages",
                "Name": "JVM Memory Pool",
                "Description": "JVM Memory Pool Usage",
                "Metrics": [
                    { "ID": "jvm.memory.memory_pool_usages.Code_Cache", "Name": "Code Cache" },
                    { "ID": "jvm.memory.memory_pool_usages.PS_Eden_Space", "Name": "Eden Space" },
                    { "ID": "jvm.memory.memory_pool_usages.PS_Old_Gen", "Name": "Old Generation" },
                    { "ID": "jvm.memory.memory_pool_usages.PS_Perm_Gen", "Name": "Permanent Generation" },
                    { "ID": "jvm.memory.memory_pool_usages.PS_Survivor_Space", "Name": "Survivor Space" }
                ]
            },
            {
                "ID": "jvm.gc",
                "Name": "JVM Garbage Collection",
                "Description": "JVM Garbage Collection Statistics",
                "Metrics": [
                    { "ID": "jvm.gc.PS_MarkSweep.runs", "Name": "JVM Garbage Collection MarkSweep Runs" },
                    { "ID": "jvm.gc.PS_MarkSweep.time", "Name": "JVM Garbage Collection MarkSweep Time" },
                    { "ID": "jvm.gc.PS_Scavenge.runs", "Name": "JVM Garbage Collection Scavenge Runs" },
                    { "ID": "jvm.gc.PS_Scavenge.time", "Name": "JVM Garbage Collection Scavenge Time" }
                ]
            },
            {
                "ID": "jvm.threads-states",
                "Name": "JVM Thread States",
                "Description": "JVM Thread States",
                "Metrics": [
                    { "ID": "jvm.thread-states.blocked", "Name": "JVM Threads in Blocked State" },
                    { "ID": "jvm.thread-states.new", "Name": "JVM Threads in New State" },
                    { "ID": "jvm.thread-states.runnable", "Name": "JVM Threads in Runnable State" },
                    { "ID": "jvm.thread-states.terminated", "Name": "JVM Threads in Terminated State" },
                    { "ID": "jvm.thread-states.timed_waiting", "Name": "JVM Threads in Timed Waiting State" },
                    { "ID": "jvm.thread-states.waiting", "Name": "JVM Threads in Waiting State" }
                ]
            },
            {
                "ID": "MetricsResources.post",
                "Name": "MetricResources Post Statistics",
                "Description": "HTTP Post Statistics for the MetricsWebResource",
                "Metrics": [
                    { "ID": "ZEN_INF.org.zenoss.app.metricservice.api.metric.remote.MetricResources.query.count", "Name": "MetricResource Total Post" },
                    { "ID": "ZEN_INF.org.zenoss.app.metricservice.api.metric.remote.MetricResources.query.meanRate", "Name": "MetricResource Average Response Rate" },
                    { "ID": "ZEN_INF.org.zenoss.app.metricservice.api.metric.remote.MetricResources.query.1MinuteRate", "Name": "MetricResource 1 Minute Moving Average Response Rate" },
                    { "ID": "ZEN_INF.org.zenoss.app.metricservice.api.metric.remote.MetricResources.query.5MinuteRate", "Name": "MetricResource 5 Minute Moving Average Response Rate" },
                    { "ID": "ZEN_INF.org.zenoss.app.metricservice.api.metric.remote.MetricResources.query.15MinuteRate", "Name": "MetricResource 15 Minute Moving Average Response Rate" },
                    { "ID": "ZEN_INF.org.zenoss.app.metricservice.api.metric.remote.MetricResources.query.max", "Name": "MetricResource Content-Length Max" },
                    { "ID": "ZEN_INF.org.zenoss.app.metricservice.api.metric.remote.MetricResources.query.min", "Name": "MetricResource Content-Length Max" },
                    { "ID": "ZEN_INF.org.zenoss.app.metricservice.api.metric.remote.MetricResources.query.mean", "Name": "MetricResource Content-Length Mean" },
                    { "ID": "ZEN_INF.org.zenoss.app.metricservice.api.metric.remote.MetricResources.query.median", "Name": "MetricResource Content-Length Median" },
                    { "ID": "ZEN_INF.org.zenoss.app.metricservice.api.metric.remote.MetricResources.query.stdev", "Name": "MetricResource Content-Length Stdev" },
                    { "ID": "ZEN_INF.org.zenoss.app.metricservice.api.metric.remote.MetricResources.query.75Percentile", "Name": "MetricResource Content-Length Histogram 75%" },
                    { "ID": "ZEN_INF.org.zenoss.app.metricservice.api.metric.remote.MetricResources.query.95Percentile", "Name": "MetricResource Content-Length Histogram 95%" },
                    { "ID": "ZEN_INF.org.zenoss.app.metricservice.api.metric.remote.MetricResources.query.98Percentile", "Name": "MetricResource Content-Length Histogram 98%" },
                    { "ID": "ZEN_INF.org.zenoss.app.metricservice.api.metric.remote.MetricResources.query.99Percentile", "Name": "MetricResource Content-Length Histogram 99%" },
                    { "ID": "ZEN_INF.org.zenoss.app.metricservice.api.metric.remote.MetricResources.query.999Percentile", "Name": "MetricResource Content-Length Histogram 99.9%" }
                ]
            }
        ],
        "GraphConfigs": [
            {
                "id": "queryRate",
                "name": "Query Rate",
                "footer": false,
                "returnset": "EXACT",
                "type": "line",
                "yAxisLabel": "Query Rate",
                "description": "Number of queries received per second.",
                "range": {
                    "start": "1h-ago",
                    "end": "0s-ago"
                },
                "datapoints": [
                    {
                        "aggregator": "avg",
                        "fill": false,
                        "id": "Queries",
                        "legend": "Queries",
                        "metric": "ZEN_INF.org.zenoss.app.metricservice.api.metric.remote.MetricResources.query.count",
                        "metricSource": "MetricResources.post",
                        "name": "Queries",
                        "rate": true,
                        "type": "line"
                    }
                ]
            }
        ]
    }
}
