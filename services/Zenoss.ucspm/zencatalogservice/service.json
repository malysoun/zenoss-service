{
    "Description": "Creates and maintains a full-text index of the event server database",
    "Command": "su - zenoss -c \"/opt/zenoss/bin/zencatalogservice run\"",
    "ConfigFiles": {
        "/opt/zenoss/etc/global.conf": {
            "Filename": "/opt/zenoss/etc/global.conf",
            "Owner": "zenoss:zenoss",
            "Permissions": "660",
            "Content": "# Generated by serviced\n{{range $k,$v:=contextFilter . \"global.conf.\"}}{{$k}} {{$v}}\n{{end}}"
        },
        "/opt/zenoss/etc/zencatalogservice.conf": {
            "FileName": "/opt/zenoss/etc/zencatalogservice.conf",
            "Owner": "zenoss:zenoss",
            "Permissions": "0664"
        }
    },
    "Endpoints": [
        {
            "Name": "zencatalogservice",
            "Application": "zodb_zencatalogservice",
            "PortNumber": 8085,
            "Protocol": "tcp",
            "Purpose": "export"
        },
        {
            "Name": "rabbitmq",
            "Application": "rabbitmq.*",
            "Purpose": "import"
        }
    ],
    "ImageID": "zenoss/zenoss5x",
    "Instances": {
        "min": 1,
        "max": 1
    },
    "RAMCommitment": "1G",
    "CPUCommitment": 1,
    "Launch": "auto",
    "LogConfigs": [
        {
            "filters": [
                "zeneventserver"
            ],
            "path": "/opt/zenoss/log/zencatalogservice.log",
            "type": "zencatalogservice"
        },
        {
            "path": "/opt/zenoss/log/zencatalogservice-stdio*.log",
            "type": "zencatalogservice_stdio"
        }
    ],
    "Name": "zencatalogservice",
    "Services": [],
    "Tags": [
        "daemon"
    ],
    "HealthChecks": {
        "running": {
            "Script": "pgrep -fu zenoss java.*zencatalogservice >/dev/null",
            "Interval": 10.0
        },
        "accepting_requests": {
            "Script": "curl -s http://localhost:8085/zencatalogservice/api/1.0/catalog/acceptingRequests | grep -q True",
            "Interval": 10.0
        },
        "rabbit_answering": {
            "Script": "/opt/zenoss/bin/healthchecks/rabbit_answering {{(getContext . \"global.conf.amqpuser\")}} {{(getContext . \"global.conf.amqppassword\")}}",
            "Interval": 10.0
        }
    },
    "Volumes": [
        {
            "#####": "drwxr-xr-x  3 zenoss zenoss 4.0K Jul 22 21:24 zencatalogservice",
            "Owner": "zenoss:zenoss",
            "Permission": "0755",
            "ResourcePath": "zencatalogservice",
            "ContainerPath": "/opt/zenoss/var/zencatalogservice"
        },
        {
            "Owner": "zenoss:zenoss",
            "ContainerPath": "/home/zenoss/.ssh",
            "Type": "",
            "ResourcePath": ".ssh",
            "Permission": "0755"
        }
    ]
}
