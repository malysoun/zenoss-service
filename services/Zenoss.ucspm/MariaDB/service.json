{
    "Description": "MySQL database server",
    "Command": "/usr/bin/mysqld_safe",
    "Endpoints": [
        {
            "Name": "mysql",
            "Application": "zodb_mysql",
            "PortNumber": 3306,
            "Protocol": "tcp",
            "Purpose": "export"
        }
    ],
    "ImageID": "zenoss/zenoss5x",
    "Instances": {
        "min": 1
    },
    "RAMCommitment": 2147483648,
    "CPUCommitment": 4,
    "Launch": "auto",
    "LogConfigs": [
        {
            "path": "/var/log/mysqld.log",
            "type": "mysql"
        }
    ],
    "Name": "MariaDB",
    "Runs": {
        "rebuild_zodb_session": "${ZENHOME:-/opt/zenoss}/bin/zenrun mysql.sh rebuild_zodb_session"
    },
    "Snapshot": {
        "Pause": "PAUSE_CHECK_TIMEOUT=60 LOCK_HOLD_DURATION=600 ${ZENHOME:-/opt/zenoss}/bin/quiesce-mysql.sh pause",
        "Resume": "${ZENHOME:-/opt/zenoss}/bin/quiesce-mysql.sh resume"
    },
    "Tags": [
        "daemon"
    ],
    "Volumes": [
        {
            "#####":         "drwxr-xr-x 12 mysql mysql 4096 Feb 25 21:27 /var/lib/mysql/",
            "Owner":         "mysql:mysql",
            "Permission":    "0755",
            "ResourcePath":  "mysql",
            "ContainerPath": "/var/lib/mysql"
        }
    ],
    "HealthChecks": {
        "answering": {
            "Script": "mysql --protocol TCP -uroot -hlocalhost -P3306 -e 'select 1' > /dev/null",
            "Interval": 5.0
        }
    },
    "PIDFile": "exec echo /var/lib/mysql/$(hostname).pid"
}
