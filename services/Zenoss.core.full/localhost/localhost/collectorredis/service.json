{
    "Description": "Redis server",
    "Command": "/usr/bin/redis-server /etc/redis.conf",
    "Endpoints": [
        {
            "Name": "CollectorRedis",
            "Application": "{{(parent .).Name}}_redis",
            "PortNumber": 6379,
            "Protocol": "tcp",
            "Purpose": "export"
        }
    ],
    "ImageID": "zenoss/zenoss5x",
    "Instances": {
        "min": 1,
        "max": 1
    },
    "RAMCommitment": 1073741824,
    "CPUCommitment": 1,
    "Launch": "auto",
    "LogConfigs": [
        {
            "path": "/var/log/redis/redis.log",
            "type": "redis"
        }
    ],
    "Name": "redis",
    "Tags": [
        "daemon",
        "collector"
    ],
    "HealthChecks": {
        "answering": {
            "Script": "redis-cli ping | grep -q PONG",
            "Interval": 5.0            
        }
    }
}
