{
    "Description": "Zope server",
    "Command": "su - zenoss -c \"/opt/zenoss/bin/runzope\" ",
    "Endpoints": [
        {
            "Name": "zenhub",
            "Application": "localhost_zenhubPB",
            "PortNumber": 8789,
            "Protocol": "tcp",
            "Purpose": "import"
        },
        {
            "Name": "mariadb",
            "Application": "zodb_.*",
            "Purpose": "import"
        },
        {
            "Name": "redis",
            "Application": "redis",
            "PortNumber": 6379,
            "Protocol": "tcp",
            "Purpose": "import"
        },
        {
            "Name": "rabbitmq",
            "Application": "rabbitmq.*",
            "Purpose": "import"
        },
        {
            "Name": "zproxy",
            "Application": "zproxy",
            "PortNumber": 8080,
            "Protocol": "tcp",
            "Purpose": "import"
        },
        {
            "Name": "zep",
            "Application": "zep",
            "PortNumber": 8084,
            "Protocol": "tcp",
            "Purpose": "import"
        },
        {
            "Name": "dynamicserver",
            "Application": "dynamicserver",
            "PortNumber": 8700,
            "Protocol": "tcp",
            "Purpose": "import"
        },
        {
            "Name": "zope",
            "Application": "zope",
            "PortNumber": 9080,
            "Protocol": "tcp",
            "Purpose": "export"
        },
        {
            "Name": "zauth",
            "Application": "zauth",
            "PortNumber": 9080,
            "Protocol": "tcp",
            "Purpose": "export"
        },
        {
            "Name": "controlplane_consumer",
            "Application": "controlplane_consumer",
            "PortNumber": 8444,
            "Protocol": "tcp",
            "Purpose": "import"
        }
    ],
    "ImageID": "zenoss/zenoss5x",
    "Instances": {
        "min": 1
    },
    "RAMCommitment": "256M",
    "CPUCommitment": 1,
    "Launch": "auto",
    "ConfigFiles": {
        "/opt/zenoss/etc/global.conf": {
            "Filename": "/opt/zenoss/etc/global.conf",
            "Owner": "zenoss:zenoss",
            "Permissions": "660",
            "Content": "# Generated by serviced\n{{range $k,$v:=contextFilter . \"global.conf.\"}}{{$k}} {{$v}}\n{{end}}"
        },
        "/opt/zenoss/etc/zope.conf": {
            "Filename": "/opt/zenoss/etc/zope.conf",
            "Owner": "zenoss:zenoss",
            "Permissions": "660"
        }
    },
    "LogConfigs": [
        {
            "filters": [
                "zope",
                "pythondaemon"
            ],
            "path": "/opt/zenoss/log/event.log",
            "type": "zope_eventlog"
        },
        {
            "filters": [
                "z2_access_logs"
            ],
            "path": "/opt/zenoss/log/Z2.log",
            "type": "zope_access_logs"
        },
        {
            "filters": [
                "supervisord"
            ],
            "path": "/opt/zenoss/log/audit.log",
            "type": "zenossaudit"
        }
    ],
    "Name": "Zope",
    "Services": [],
    "Tags": [
        "daemon"
    ],
    "Volumes": [
        {
            "#####": "drwxr-xr-x 2 zenoss zenoss 4096 Feb  6 19:11 /opt/zenoss/.pc",
            "Owner": "zenoss:zenoss",
            "Permission": "0755",
            "ResourcePath": "zenoss-custom-patches-pc",
            "ContainerPath": "/opt/zenoss/.pc"
        },
        {
            "#####": "drwxr-xr-x 2 zenoss zenoss 4096 Feb  6 19:11 /opt/zenoss/patches",
            "Owner": "zenoss:zenoss",
            "Permission": "0755",
            "ResourcePath": "zenoss-custom-patches",
            "ContainerPath": "/opt/zenoss/patches"
        },
        {
            "#####": "drwxr-xr-x 2 zenoss zenoss 4096 Feb  6 19:11 /opt/zenoss/log/jobs",
            "Owner": "zenoss:zenoss",
            "Permission": "0755",
            "ResourcePath": "zenjobs",
            "ContainerPath": "/opt/zenoss/log/jobs"
        },
        {
            "#####": "drwxrwxr-x 3 zenoss zenoss 4096 Jul 18 11:20 /opt/zenoss/var/ext",
            "Owner": "zenoss:zenoss",
            "Permission": "0775",
            "ResourcePath": "zenoss-var-ext",
            "ContainerPath": "/opt/zenoss/var/ext"
        },
        {
            "#####": "drwxrwxr-x 3 zenoss zenoss 4096 Jul 18 11:20 /opt/zenoss/var/flexera",
            "Owner": "zenoss:zenoss",
            "Permission": "0775",
            "ResourcePath": "zenoss-var-flexera",
            "ContainerPath": "/opt/zenoss/var/flexera"
        },
        {
            "#####": "drwxrwxr-x 4 zenoss zenoss 4096 Jul 18 11:20 /opt/zenoss/export",
            "Owner": "zenoss:zenoss",
            "Permission": "0775",
            "ResourcePath": "zenoss-export",
            "ContainerPath": "/opt/zenoss/export"
        },
        {
            "Owner": "zenoss:zenoss",
            "Permission": "0775",
            "ResourcePath": "zenpack-backup",
            "ContainerPath": "/opt/zenoss/.ZenPacks"
        },
        {
            "Owner": "zenoss:zenoss",
            "ContainerPath": "/home/zenoss/.ssh",
            "Type": "",
            "ResourcePath": ".ssh",
            "Permission": "0755"
        },
        {
            "Owner": "zenoss:zenoss",
            "ResourcePath": "var-zenpacks",
            "ContainerPath": "/var/zenoss",
            "Permission": "0775"
        }
    ],
    "Runs": {
        "apply-custom-patches": "${ZENHOME:-/opt/zenoss}/bin/zenrun patch.sh applyPatches",
        "help": "${ZENHOME:-/opt/zenoss}/bin/zenrun help.sh",
        "install-percona": "NOCOMMIT=true ${ZENHOME:-/opt/zenoss}/bin/zenrun percona.sh install",
        "zendmd": "NOCOMMIT=true ${ZENHOME:-/opt/zenoss}/bin/zenrun zendmd",
        "zenmib": "${ZENHOME:-/opt/zenoss}/bin/zenrun zenmib.sh",
        "zenpack": "${ZENHOME:-/opt/zenoss}/bin/zenrun zenpack.sh --service-id={{.ID}}",
        "upgrade": "${ZENHOME:-/opt/zenoss}/bin/zenrun upgrade.sh doUpgrade"
    },
    "HealthChecks": {
        "running": {
            "Script": "pgrep -fu zenoss runzope >/dev/null",
            "Interval": 5.0
        },
        "answering": {
            "Script": "curl -o /dev/null -w '%{redirect_url}' -s http://localhost:9080/zport/dmd | grep -q acl_users",
            "Interval": 5.0
        },
        "mariadb_answering": {
            "Script": "/opt/zenoss/bin/healthchecks/mariadb_answering",
            "Interval": 10.0
        },
        "redis_answering": {
            "Script": "/opt/zenoss/bin/healthchecks/redis_answering",
            "Interval": 5.0
        },
        "rabbit_answering": {
            "Script": "/opt/zenoss/bin/healthchecks/rabbit_answering {{(getContext . \"global.conf.amqpuser\")}} {{(getContext . \"global.conf.amqppassword\")}}",
            "Interval": 10.0
        },
        "catalogservice_answering": {
            "Script": "/opt/zenoss/bin/healthchecks/catalogservice_answering",
            "Interval": 10.0
        },
        "zproxy_answering": {
            "Script": "/opt/zenoss/bin/healthchecks/zproxy_answering",
            "Interval": 10.0
        },
        "zep_answering": {
            "Script": "/opt/zenoss/bin/healthchecks/zep_answering",
            "Interval": 10.0
        }
    },
    "Prereqs": [
        {
            "Name": "MariaDB connectivity",
            "Script": "su - zenoss -c '/opt/zenoss/bin/python /opt/zenoss/Products/ZenUtils/ZenDB.py --usedb zodb --execsql=\";\"'"
        }
    ]
}
