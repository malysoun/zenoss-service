{
    "CPUCommitment": 1,
    "Command": "/usr/bin/run-hbase-master.sh /etc/hbase-site.xml",
    "ConfigFiles": {
        "/etc/hbase-env.sh": {
            "FileName": "/etc/hbase-env.sh",
            "Owner": "hbase:hbase",
            "Permissions": "0775"
        },
        "/etc/hbase-site.xml": {
            "FileName": "/etc/hbase-site.xml",
            "Owner": "hbase:hbase",
            "Permissions": "0664"
        }
    },
    "Description": "Master Server for HBase",
    "Endpoints": [
        {
            "Application": "hbase-master-1",
            "Name": "hbase-master-1",
            "PortNumber": 60000,
            "Protocol": "tcp",
            "Purpose": "export"
        },
        {
            "Application": "hbase-master-rest",
            "Name": "hbase-master-rest",
            "PortNumber": 61000,
            "Protocol": "tcp",
            "Purpose": "export"
        },
        {
            "Application": "hbase-masterinfo-1",
            "Name": "hbase-masterinfo-1",
            "PortNumber": 60010,
            "Protocol": "tcp",
            "Purpose": "export",
            "VHostList": [
                {
                    "Enabled": false,
                    "Name": "hbase"
                }
            ]
        },
        {
            "Application": "hbase-regionserver",
            "Name": "hbase-regionserver",
            "PortNumber": 60200,
            "Protocol": "tcp",
            "Purpose": "import_all"
        },
        {
            "Application": "zookeeper-client",
            "Name": "zookeeper-client",
            "PortNumber": 2181,
            "Protocol": "tcp",
            "Purpose": "import_all",
            "VirtualAddress": "zk{{ plus 1 .InstanceID }}:2181"
        }
    ],
    "HealthChecks": {
        "cluster_healthy": {
            "Interval": 10.0,
            "Script": "curl -f -s http://127.0.0.1:61000/status/cluster | grep -q '0 dead'"
        },
        "rest_answering": {
            "Interval": 10.0,
            "Script": "curl -o /dev/null -f -s http://127.0.0.1:61000/status/cluster"
        }
    },
    "Hostname": "localhost",
    "ImageID": "zenoss/hbase:xx",
    "Instances": {
        "min": 1
    },
    "Launch": "auto",
    "LogConfigs": [
        {
            "path": "/var/log/hbase/hbase-master.log",
            "type": "hbase"
        }
    ],
    "Name": "HMaster",
    "Prereqs": [
        {
            "Name": "All ZooKeepers up",
            "Script": "{{with $zks := (child (parent .) \"ZooKeeper\").Instances }}{{ range (each $zks) }}{ echo ruok; sleep 1; } | nc zk{{plus 1 .}} 2181 | grep imok {{if ne (plus 1 .) $zks}}&& {{end}}{{end}}{{end}}"
        }
    ],
    "Privileged": true,
    "RAMCommitment": "1G",
    "Tags": [
        "daemon"
    ],
    "Volumes": [
        {
            "#####": "drwxr-xr-x  2 hbase hbase 4.0K Apr 15 12:57 /var/hbase",
            "ContainerPath": "/var/hbase",
            "Owner": "hbase:hbase",
            "Permission": "0755",
            "ResourcePath": "hbase-master"
        }
    ]
}