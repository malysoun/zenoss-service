{
    "Actions": {
        "debug": "su - zenoss -c '${ZENHOME:-/opt/zenoss}/bin/{{.Name}} debug'",
        "stats": "su - zenoss -c '${ZENHOME:-/opt/zenoss}/bin/{{.Name}} stats'"
    },
    "CPUCommitment": 1,
    "Command": "su - zenoss -c \"/opt/zenoss/bin/zenpop3 run -c --logfileonly \"",
    "ConfigFiles": {
        "/opt/zenoss/etc/global.conf": {
            "Content": "# Generated by serviced\n{{range $k,$v:=contextFilter . \"global.conf.\"}}{{$k}} {{$v}}\n{{end}}",
            "Filename": "/opt/zenoss/etc/global.conf",
            "Owner": "zenoss:zenoss",
            "Permissions": "660"
        },
        "/opt/zenoss/etc/zenpop3.conf": {
            "FileName": "/opt/zenoss/etc/zenpop3.conf",
            "Owner": "zenoss:zenoss",
            "Permissions": "0664"
        }
    },
    "Description": "Collector daemon that and converts email messages obtained from POP3 accounts into events",
    "Endpoints": [
        {
            "Application": "{{(parent (parent .)).Name}}_zenhubPB",
            "Name": "zenhub",
            "PortNumber": 8789,
            "Protocol": "tcp",
            "Purpose": "import"
        },
        {
            "Application": "controlplane_consumer",
            "Name": "controlplane_consumer",
            "PortNumber": 8444,
            "Protocol": "tcp",
            "Purpose": "import"
        },
        {
            "Application": "{{(parent .).Name}}_redis",
            "Name": "CollectorRedis",
            "PortNumber": 6379,
            "Protocol": "tcp",
            "Purpose": "import"
        }
    ],
    "HealthChecks": {
        "running": {
            "Interval": 5.0,
            "Script": "pgrep -fu zenoss zenpop3.py > /dev/null"
        },
        "zenhub_answering": {
            "Interval": 10.0,
            "Script": "/opt/zenoss/bin/healthchecks/zenhub_answering"
        }
    },
    "ImageID": "zenoss/zenoss5x",
    "Instances": {
        "default": 1,
        "max": 1
    },
    "Launch": "auto",
    "LogConfigs": [
        {
            "filters": [
                "pythondaemon"
            ],
            "path": "/opt/zenoss/log/zenpop3.log",
            "type": "zenpop3"
        },
        {
            "filters": [
                "supervisord"
            ],
            "path": "/opt/zenoss/log/audit.log",
            "type": "zenossaudit"
        }
    ],
    "Name": "zenpop3",
    "RAMCommitment": "256M",
    "Services": [],
    "Tags": [
        "daemon"
    ],
    "Volumes": [
        {
            "ContainerPath": "/var/zenoss",
            "Owner": "zenoss:zenoss",
            "Permission": "0775",
            "ResourcePath": "var-zenpacks"
        }
    ]
}